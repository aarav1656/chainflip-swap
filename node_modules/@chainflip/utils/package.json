{
  "name": "@chainflip/utils",
  "version": "0.4.0",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    "./*": {
      "require": {
        "types": "./dist/*.d.cts",
        "default": "./dist/*.cjs"
      },
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    }
  },
  "devDependencies": {
    "@noble/hashes": "^1.4.0"
  },
  "repository": "https://github.com/chainflip-io/chainflip-product-toolkit.git",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prepublish": "pnpm test run && pnpm build:clean",
    "build": "tsup",
    "build:clean": "pnpm clean && pnpm build",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  }
}